<style>
.favTitle {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  background: #fff;
  text-align: center;
  font-size: 34rpx;
}

.favSearch {
  position: absolute;
  top: 50%;
  left: 40rpx;
  margin-top: -30rpx;
  width: 500rpx;
  height: 60rpx;
  padding-right: 50rpx;
  line-height: 60rpx;
  text-indent: 0.5em;
  border-radius: 30rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  background-color: #f2f2f2;
  background-image: url('http://pbn1t9k4c.bkt.clouddn.com/search.png');
  background-size: 40rpx;
  background-position: 530rpx;
  background-repeat: no-repeat;
}

.conso {
  float: right;
  width: 120rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.consoed {
  color: #e33d45;
}

/* *******************商品编辑************************* */

.consolePlatform {
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
  transition: 0.5s;
}

.selectedAll {
  width: 160rpx;
  height: 80rpx;
  background: rgb(16, 172, 25);
  text-align: center;
}

.selectedAll > icon {
  margin-top: 16rpx;
  vertical-align: top;
}

.delComs {
  width: 160rpx;
  text-align: center;
  background: #e33d45;
}

.noComs {
  text-align: center;
  height: 100rpx;
  padding: 50rpx 0;
  line-height: 100rpx;
  font-size: 40rpx;
}
</style>

<template lang='wxml'>
  <view class="container">
     <!-- 标题 -->
    <view class="favTitle">
        <view class="conso {{consolePlat==='1'&&Goods.length!=0?'consoed':''}}" @tap="filterManager">
        {{consolePlat==='1'&&Goods.length!=0?'完成':'编辑'}}
      </view>
    </view>
    <!-- 精选商品展示模板 -->
      <view class="featuredWrap">
            <repeat for="{{Goods}}">
                <featuredComList :pingtai.sync='shopId' :favPage.sync="favPage" :item="item" :consolePlat='consolePlat' @childChange.user="change" :index="index" @childMoveCom.user='moveCom' @childMoveStart.user="moveStart" :moved="moved" @childDeleteList.user="deleteCom" :moveInx.sync='moveInx'></featuredComList>
            </repeat>
            <view class="noGoods" wx:if="{{Goods.length===0}}" style="background-image: url('http://pbn1t9k4c.bkt.clouddn.com/nofoot.png');"></view>
            <!-- 返回顶部 -->
            <totop :showTop.sync='showTop' @childTotop.user = 'totop'></totop>
      </view>

      <!-- 商品编辑 -->
    <view class="consolePlatform" wx:if="{{consolePlat==='1'&&Goods.length!=0}}">
      <view class="selectedAll" bind:tap="selectAll">全选</view>
      <view class="delComs" bind:tap="deleteList">删除</view>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy'
import FeaturedComList from '../components/featureComList'
import Totop from '../components/totop'
import PageScroll from '../mixins/pageScroll'
export default class extends wepy.page {
  data = {
    Goods: [],
    pingtai: '',
    favPage: '1',
    showTop: '0',
    consolePlat: '0',
    selectAllStatus: false,
    startPageX: 0,
    moved: '0',
    moveInx: '0'
  }

  onShow() {
    this.getFoot()
  }

  getFoot() {
    this.Goods = wepy.getStorageSync('footprint')
    if (!this.Goods) {
      this.Goods = []
    }
    this.$apply()
  }

  onPageScroll(e) {
    if (e.scrollTop >= 500) {
      this.showTop = '1'
      this.$apply()
    } else {
      this.showTop = '0'
      this.$apply()
    }
  }

  methods = {
    filterManager() {
      this.consolePlat = this.consolePlat === '0' ? '1' : '0'
    },
    totop() {
      this.pageScrollTo()
    },
    change(val) {
      const index = val
      let goods = this.Goods
      const selected = goods[index].selected
      goods[index].selected = !selected
      this.Goods = goods
    },
    selectAll(e) {
      let selectAllStatus = this.selectAllStatus
      selectAllStatus = !selectAllStatus
      let goods = this.Goods

      for (let i = 0; i < goods.length; i++) {
        goods[i].selected = selectAllStatus
      }
      this.selectAllStatus = selectAllStatus
      this.Goods = goods
    },
    deleteList(e) {
      let goods = this.Goods
      let arr2 = []
      for (let i = 0; i < goods.length; i++) {
        if (!goods[i].selected) {
          arr2.push(goods[i])
        }
        this.Goods = arr2
      }
      wepy.setStorage({
        key: 'footprint',
        data: arr2
      })
    },
    moveCom(e) {
      if (e.touches[0].pageX - this.startPageX > 0) {
        this.moved = '0'
      } else {
        this.moved = '1'
      }
    },
    moveStart(index, e) {
      this.startPageX = e.touches[0].pageX
      this.moveInx = index
      this.$apply()
    },
    deleteCom(index) {
      console.log(index)
      let goods = this.Goods
      goods.splice(index, 1)
      this.Goods = goods
      this.moved = '0'
      wepy.setStorage({
        key: 'footprint',
        data: goods
      })
    }
  }

  components = {
    featuredComList: FeaturedComList,
    totop: Totop
  }

  mixins = [PageScroll]
}
</script>
